<div class="modal fade" id="ModalCreateEvent" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="ModalCreateEventLabel" aria-hidden="true">
  <div class="modal-dialog  modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalCreateEventLabel">When ?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="creation p-3"
           data-controller="creation">
        <%= render "1-when" %>
        <%= render "2-month" %>
        <%= render "3-week" %>
        <%= render "4-day" %>
        <%= render "5-lunch" %>
        <%= render "6-ranking" %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn rounded-pill px-3 py-2" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
