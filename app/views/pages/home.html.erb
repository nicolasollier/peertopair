<%= render 'devise/shared/navbar' %>

<div class="panel-menu inactive" data-menu-target="panel">
  <ul class="menu-wrapper">
    <li class="menu-item">Our Product</li>
    <li class="menu-item">Our Team</li>
    <li class="menu-item">Contacts</li>
    <li class="menu-item">F.A.Q</li>
  </ul>
  <% if user_signed_in? %>
    <a href="/dashboard" class="btn cta-btn">My account</a>
  <% else %>
    <a href="/users/sign_in" class="btn cta-btn">Log in</a>
  <% end %>
</div>

<div class= "hero-section">
  <div class="content-wrapper">
    <div class="text-wrapper">
      <h1 class="tagline">
        Connect internally,
        <br>
        Create opportunities.
      </h1>
      <p class="slogan mt-4 pe-5">
        Meet peers from your company, people you wouldn’t have talked to otherwise.
        Based on people’s availabilities and meeting preferences.
      </p>
      <a href="#" class="btn btn-primary cta-btn">Try Peertopair!</a>
    </div>

    <div class="img-wrapper">
      <%= image_tag "people/woman-2.png", class: "hero-img", id:"img1" %>
      <%= image_tag "people/man-2.png", class: "hero-img", id: "img2" %>
    </div>
  </div>
</div>

<section class="credentials">
  <h3>They already trust us:</h3>
  <div class="logos-wrapper">
    <%= image_tag "brands/google", class: "brand-img", id:"google" %>
    <%= image_tag "brands/microsoft", class: "brand-img", id:"microsoft" %>
    <%= image_tag "brands/renault", class: "brand-img", id:"renault" %>
  </div>
</section>

<section class="infos">
  <h1 class="tagline white">Don't miss any news! <br>
  Subscribe to our newsletter.
  </h1>
  <a href="#" class="btn btn-white">Subscribe</a>
</section>

<%= render "footer" %>
