<div class="lunch" style="display: none;">
  <%= simple_form_for(@event) do |f| %>
    <%= f.input :start_date, as: :datetime, html5: true, label: false, input_html: { id: "event-start-date" } %>
    <%= f.input :end_date, as: :datetime, html5: true, label: false, input_html: { id: "event-end-date" } %>
    <%= f.input :event_type, label: false, input_html: { id: "event-type" } %>
    <%= f.input :format, label: false, input_html: { id: "event-format" } %>
    <%= f.submit class: 'btn rounded-pill sign-up-btn mb-5', input_html: { id: "submit-create-event"} %>
  <% end %>
</div>
