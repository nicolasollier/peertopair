<div class="card-dash mb-2"
      data-controller="card-dash"
      data-action="click->card-dash#unfold"
      id=<%= event.id %>>

  <div class="badge card-badge <%= event.status(current_user)%>">
    <% if event.status(current_user) == "now" %>
      Get ready to meet in <%= time_ago_in_words(event.start_date) %>!
    <% elsif event.status(current_user) == "paired" %>
      Event in <%= time_ago_in_words(event.start_date) %>
    <% elsif event.status(current_user) == "pairing" %>
      Waiting for a Peer to accept
    <% end %>
  </div>

