<% case event.status(current_user) %>
<% when "paired" %>
  <p class="status-message text-center">There is two participants</p>
  <!--Besoin de connaÃ®tre l'event type pour agir en fonction -->
  <% if event.event_type === "Drink" %>
    <p class="text-center">We are going to propose you some cool bar !</p>
  <% elsif event.event_type === "Lunch" %>
    <p class="text-center">We are going to propose you some cool restaurants !</p>
  <% elsif event.event_type === "Coffee" %>
    <p class="status-message text-center">We are going to propose you some cool coffee !</p>
  <% end %>
<% when "canceled" %>
  <p class="status-message text-center">This event has been canceled ...</p>
<% when "passed" %>
  <p class="status-message text-center">This event is over now ...</p>
<% when "now" %>
  <p class="status-message text-center">Get ready ! The time is now !</p>
<% when "pairing" %>
  <p class="status-message text-center">We still waiting your pair</p>
<% end %>
