<% case event.status(current_user) %>
  <% when "paired" %>
    <p class="status-message text-center">We found you a Peer!</p>
    <!--Besoin de connaître l'event type pour agir en fonction -->
    <% if event.event_type === "Drink" %>
      <p class="text-center">According to your tastes, <%= event.venue %> is the best place to have a drink</p>
    <% elsif event.event_type === "Lunch" %>
      <p class="text-center">According to your tastes, <%= event.venue %> is the best place to have lunch</p>
    <% elsif event.event_type === "Coffee" %>
      <p class="status-message text-center">According to your tastes, <%= event.venue %> is the best place to have a coffee</p>
    <% end %>
  <% when "canceled" %>
    <p class="status-message text-center">This event has been canceled...💔</p>
  <% when "passed" %>
    <p class="status-message text-center">This event is over now...😴</p>
  <% when "now" %>
    <%# <p class="status-message text-center">Get ready! The time is now! 🎉</p> %>
  <% when "pairing" %>
    <p class="status-message text-center">We're still waiting for your pair... 👀</p>
<% end %>
