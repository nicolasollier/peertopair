<% case event.status(current_user) %>
  <% when "paired" %>
    <p class="status-message text-center">There are two participants</p>
    <!--Besoin de connaître l'event type pour agir en fonction -->
    <% if event.event_type === "Drink" %>
      <p class="text-center">Here's some cool bars for you where you could meet!</p>
    <% elsif event.event_type === "Lunch" %>
      <p class="text-center">Here's some cool restaurants for you where you could meet!</p>
    <% elsif event.event_type === "Coffee" %>
      <p class="status-message text-center">Here's some cool cafes for you where you could meet!</p>
    <% end %>
  <% when "canceled" %>
    <p class="status-message text-center">This event has been canceled...💔</p>
  <% when "passed" %>
    <p class="status-message text-center">This event is over now...😴</p>
  <% when "now" %>
    <p class="status-message text-center">Get ready! The time is now! 🎉</p>
    <p class="status-message text-center">Meet <%= event.other_user(current_user) %> at <%= event.start_date.strftime(%h:%m) %></p>

  <% when "pairing" %>
    <p class="status-message text-center">We're still waiting for your pair... 👀</p>
<% end %>
